#!/usr/bin/env bash

xmls="
locus_all-local.xml
locus_dem-local.xml
locus_map-local.xml
locus_style-local.xml
locus_upgrade-local.xml
"

for xml in $xmls; do
    cat $xml | sed -e "s/__local_ip__/$LOCAL/g" -e "s/__local_port__/$PORT/g" > u_$xml
done
cat local.html | sed -e "s/__local_ip__/$LOCAL/g" -e "s/__local_port__/$PORT/g" > index.html

nginx
